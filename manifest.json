{
    "manifest_version": 3,
    "name": "QuickNote",
    "version": "1.0.0",
    "description": "Uma extensão simples para salvar e visualizar notas rápidas.",
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_title": "QuickNote",
      "default_popup": "src/popup/popup.html"
    },
    "background": {
      "service_worker": "src/background/service-worker.js"
    },
    "permissions": ["storage"]
  }